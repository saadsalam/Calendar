
@using Vinmove.Models;
@model IEnumerable<Calendar>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <title>Index</title>
</head>
<body>


    <div class="container">
       

            <h1>@ViewBag.Monthname 2016</h1>
            <select name="year">
                @for (var i = 0; i < 6; i++)
                {

                    <option>@(DateTime.Now.AddYears(i).Year)</option>
                }
            </select>



            <select id="month">

                {
                <option value="1"> January</option>
                <option value="2"> February</option>
                <option value="3"> March</option>
                <option value="4"> April</option>
                <option value="5"> May</option>
                <option value="6"> June</option>
                <option value="7"> July</option>
                <option value="8"> August</option>
                <option value="9"> September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>

                }

            </select>

            @Html.ActionLink("Refresh", "Details", new { id = 1 }, new { btnName = "btnEditItem", @class = "btn btn-default btn-xs" })



           
        <table class="table table-bordered table-responsive table-hover">
            <thead>
                <tr style="background-color:black;color:white">

                    <th>Sunday</th>
                    <th>Monday</th>
                    <th>Tuesday</th>
                    <th>Wednesday</th>
                    <th>Thursday</th>
                    <th>Friday</th>
                    <th>Saturday
                </tr>
            </thead>





            @foreach (Calendar calnder in @Model)
            {


                <tr>
                    <td align="center">
                        <strong>@calnder.i1CalendarDate</strong><br />

                        <strong>@calnder.i1HolidayName</strong><br />


                        @{Html.RenderAction("Index", "Calendar", new { id = "'" + calnder.i1CalendarDate + "'" });}


                    </td>
                    <td align="center">
                        <strong>@calnder.i2CalendarDate</strong>
                        <br />
                        <strong>@calnder.i2HolidayName</strong><br />

                        @{Html.RenderAction("Index", "Calendar", new { id = "'" + calnder.i2CalendarDate + "'" });}

                    </td>


                    <td align="center">
                        <strong>@calnder.i3CalendarDate</strong>
                        <br />
                        <strong>@calnder.i3HolidayName</strong><br />

                        @{Html.RenderAction("Index", "Calendar", new { id = "'" + calnder.i3CalendarDate + "'" });}

                    </td>
                    <td align="center">
                        <strong>@calnder.i4CalendarDate</strong>
                        <br />
                        <strong>@calnder.i4HolidayName</strong><br />

                        @{Html.RenderAction("Index", "Calendar", new { id = "'" + calnder.i4CalendarDate + "'" });}
                    </td>

                    <td align="center">
                        <strong>
                            @calnder.i5CalendarDate
                        </strong>

                        <br />
                        <strong>@calnder.i5HolidayName</strong><br />

                        @{Html.RenderAction("Index", "Calendar", new { id = "'" + calnder.i5CalendarDate + "'" });}




                    </td>

                    <td align="center">
                        <strong>@calnder.i6CalendarDate</strong>
                        <br />
                        <strong>@calnder.i6HolidayName</strong><br />

                        @{Html.RenderAction("Index", "Calendar", new { id = "'" + calnder.i6CalendarDate + "'" });}


                    </td>


                    <td align="center">
                        <strong>@calnder.i7CalendarDate</strong>
                        <br />
                        <strong>@calnder.i7HolidayName</strong><br />

                        @{Html.RenderAction("Index", "Calendar", new { id = "'" + calnder.i7CalendarDate + "'" });}
                    </td>

                </tr>

            }

        </table>



            </div>
       
</body>

</html>
